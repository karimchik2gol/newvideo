<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <%= form_tag("/videos/get_video_info") do %>
            <%= fields_for :search do |f| %>
                <div class="form-group m-b-20">
                    <label class="col-sm-2 control-label">Поиск по фразе</label>
                    <div class="col-sm-9">
                        <%= f.text_field :q, class: "form-control inputmask" %>
                    </div>
                </div>

                <div class="form-group m-b-20">
                    <label class="col-sm-2 control-label">Категория</label>
                    <div class="col-sm-9">
                        <div class="row col-sm-12 m-t-10 m-b-10"><a href="#" class="latest-categories" data-categories="<%= @categories %>">Get latest categories</a></div>
                        <% Category.all.each do |c| %>
                            <div class="col-sm-4">
                                <%= check_box_tag 'category_ids[]', c.category_id, false %> <%= f.label :category_id, c.name %>
                            </div>
                        <% end %>
                    </div>
                </div>
            <% end %>
            <button class="btn btn-info col-sm-offset-2">Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>